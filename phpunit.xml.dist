<phpunit bootstrap="tests/bootstrap.php" colors="true">
    <testsuites>
        <testsuite>
            <directory suffix="Test.php">tests/</directory>
        </testsuite>
    </testsuites>
    <!-- exclude composer vendor folder -->
    <filter>
        <whitelist>
            <directory suffix=".php">classes/</directory>
        </whitelist>
    </filter>
</phpunit>
